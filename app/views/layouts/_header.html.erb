<div id="header">
  <div class="top_strip">
    <div class="container">
      <ul class="top_strip_menu">
        <% if user_signed_in? %>
          <li class="top_menu_item">
            <%= link_to 'Мой аккаунт', user_path(current_user) %>
          </li>
          <li class="top_menu_item">
            <%= link_to 'Выход', destroy_user_session_url, method: :delete, class: 'menu__item-link' %>
          </li>
        <% else %>
          <li class="top_menu_item">
            <%= link_to 'Войти', new_user_session_path, class: 'menu__item-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="container">
    <div class="logo_box">
      <div id="logo">
        <%= link_to image_tag('house_logo.png'), root_path %>
      </div>
      <div class="search">
        <div class="search_box">
          <%= image_tag('search_box.png') %>
      </div>
    </div>
  </div>
</div>
